<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>

    <link rel="stylesheet" href="/style2.css">
    <link rel="stylesheet"
  href="https://unpkg.com/boxicons@latest/css/boxicons.min.css">
  <style>
    .error-message {
        color: red;
        font-size: 14px;
        margin-top: 5px;
    }
    </style>
</head>
<body>
    <div class="inicio">
        <i class='bx bx-home' id="home"></i>
    </div>
    <div class="form-container" id="login">
        <h2>Regista-te</h2>
        <!-- Adicione um espaço para exibir mensagens de erro -->
        <!-- Adicione um espaço para exibir mensagens de erro -->
        <% if (typeof error !== 'undefined' && error !== null) { %>
            <div class="error-message">
                <%= error %>
            </div>
        <% } %>
        <!-- Adicione um espaço para exibir mensagens de sucesso -->
        <% if (typeof success !== 'undefined' && success !== null) { %>
            <div class="success-message">
                <%= success %>
            </div>
        <% } %>
        <form action="/signup" method="post">
            <div class="form-group">
                <input type="text" id="name" name="username" placeholder="Nome de Utilizador" required autocomplete="off">
            </div>
            <div class="form-group">
                <input type="password" name="password" id="password" placeholder="Palavra-passe" required>
            </div>
            <button type="submit" class="submit-btn">Registar</button>
        </form>
        <p>Já tens conta? <a class="link" href="/login">Iniciar Sessão</a></p>
    </div>

    <script>
        document.getElementById("home").addEventListener("click", function() {
            // Redireciona para o index.html quando o ícone "home" é clicado
            window.location.href = "/index.html";
        });
    </script>

</body>
</html>